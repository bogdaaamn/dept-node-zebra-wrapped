---
// Default link data is articles
// If someone navigates to /preview outside of navigation
// It will default to articles
const link = {
  url: "/articles",
  text: "Articles",
};

const currentPath = Astro.url.pathname;

// When on the tools page, change the link to articles
// Because the header presists across navigation,
// It will stay the same when navigating to previews
// When navigating back internally, astro will "data-astro-reload"
if (currentPath === "/articles") {
  link.url = "/tools";
  link.text = "Tools";
}
---

<header class="pt-8 pb-4" transition:persist>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4 items-center">
    <span class="text-right md:text-left">
      <a href={link.url} data-astro-reload>{link.text}</a>
    </span>
    <span
      class="text-3xl md:text-2xl lg:text-3xl font-playfair text-center order-first col-span-2 md:order-none md:col-span-1"
    >
      <h1>
        <a href="/" data-astro-reload>Node Zebra <i>Wrapped</i></a>
      </h1>
    </span>

    <span class="text-left md:text-right">
      <a
        href="https://dept-node-zebra.vercel.app/"
        target="_blank"
        rel="noopener noreferrer"
      >
        About â†—
      </a>
    </span>
  </div>
</header>
