---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  image: ImageMetadata;
  borderRadius?: string;
}

const { title, image, borderRadius = "rounded-4xl" } = Astro.props;
---

<div
  class:list={[
    borderRadius,
    "group bg-stone-100 aspect-[2/1] overflow-hidden relative cursor-pointer",
    "px-12 py-8 md:px-8 md:py-4 lg:px-12 lg:py-8",
  ]}
>
  <Image
    src={image}
    alt=`Cover image for the website titled "${title}"`
    width="600"
    quality="high"
    class:list={[
      "transition-opacity ease-in duration-300 opacity-0 group-hover:opacity-70",
      "object-cover h-full grayscale absolute inset-0",
    ]}
  />

  <div
    class:list={[
      "transition-opacity ease-in duration-300 opacity-100 group-hover:opacity-0",
      "relative h-full",
    ]}
  >
    <slot />
  </div>
</div>
