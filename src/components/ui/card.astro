---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  borderRadius?: string;
}

const { image, borderRadius = "rounded-4xl" } = Astro.props;
---

<div
  class:list={[
    borderRadius,
    "bg-stone-200 aspect-[2/1] overflow-hidden relative p-8",
  ]}
>
  <Image
    src={image}
    alt="alt"
    width="600"
    class="object-cover h-full grayscale opacity-70 absolute inset-0 z-0"
    quality="high"
  />

  <div class="relative z-1 h-full">
    <slot />
  </div>
</div>
